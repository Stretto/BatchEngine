	"homepage": "https://github.com/vova616/BatchEngine",
	"copyright": "Copyright Â© 2013, vova616@gmail.com",
	"authors": [
		"Vovchik"
	],
	"sourcePaths" : [
		"source"
	],
	"dependencies": {
		"gl3n": "~master",
		"derelict-fi": "~master",
		"derelict-gl3": "~master",
		"derelict-glfw3": "~master",
		"derelict-ft": "~master",
	},
	"subPackages": [
		"./examples/box2d/",
		"./examples/life/",
		"./examples/gravity/",
	],
	"configurations": [
		{
			"name": "application",
			"targetType": "library",
		},
		{	
			"name": "gravity",
			"targetType": "executable",
			"sourcePaths" : ["./examples/gravity/"],
			"targetPath" : "./",
			"dflags": ["-noboundscheck","-release","-O","-vectorize-loops"],
		},
		{	
			"name": "life",
			"targetType": "executable",
			"sourcePaths" : ["./examples/life/"],
			"targetPath" : "./",
			"dflags": ["-noboundscheck","-release","-O","-vectorize-loops"],
		}
	],
}
